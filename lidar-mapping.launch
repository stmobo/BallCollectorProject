<launch>
    <node pkg="tf" type="static_transform_publisher" name="laser_pos" args="0 0 0 0 0 0 base_link laser 100" />
    <node pkg="tf" type="static_transform_publisher" name="odom_pos" args="0 0 0 0 0 0 odom base_link 100" />

    <node pkg="rplidar_ros" type="rplidarNode" name="lidar">
        <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>
        <param name="serial_baudrate"     type="int"    value="115200"/>
        <param name="frame_id"            type="string" value="laser"/>
        <param name="inverted"            type="bool"   value="false"/>
        <param name="angle_compensate"    type="bool"   value="true"/>
    </node>

    <node name="mapping" pkg="hector_mapping" type="hector_mapping" output="screen" />
</launch>
