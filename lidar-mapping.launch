<launch>
    <!--
        laser is:
            (10.5 * .5") = 5.25" = 0.13335m in -X direction,
            (7.5 * .5") = 3.75" = 0.09525m in -Y direction,
            (19 * .5") = 9.5" = 0.2413m in +Z direction
            and rotated 90 degrees (= pi/2 radians = 1.571 radians)
        ...roughly.
    -->
    <node pkg="tf" type="static_transform_publisher" name="laser_pos" args="-0.13335 -0.09525 0.2413 1.571 0 0 base_link laser 100" />

    <node pkg="cortex_driver" type="robot_driver" name="robot_driver" output="screen" required="true"/>
    <node pkg="cortex_driver" type="base_control" name="base_control" output="screen" respawn="true"/>

    <node pkg="rplidar_ros" type="rplidarNode" name="lidar" respawn="true">
        <param name="serial_port"         type="string" value="/dev/ttyUSB0"/>
        <param name="serial_baudrate"     type="int"    value="115200"/>
        <param name="frame_id"            type="string" value="laser"/>
        <param name="inverted"            type="bool"   value="false"/>
        <param name="angle_compensate"    type="bool"   value="true"/>
    </node>

    <node name="mapping" pkg="hector_mapping" type="hector_mapping" required="true" output="screen">
        <param name="pub_map_odom_transform" value="true" />
        <param name="map_frame" value="map" />
        <param name="base_frame" value="base_link" />
        <param name="odom_frame" value="odom" />

        <param name="laser_min_dist" value="0.05" />
        <param name="laser_max_dist" value="8.0" />
        <param name="map_update_distance_thresh" value="0.1" />
    </node>
</launch>
